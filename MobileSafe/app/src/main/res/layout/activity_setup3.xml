<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/mytitle"
        android:text="3,设置安全号码"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:text="SIM卡变更后："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="25dp"
        android:text="报警短信会发送给安全号码"/>

   <EditText
       android:id="@+id/input_number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="请输入安全号码"/>
    <Button
        android:id="@+id/bu_select_number"
        android:background="@drawable/select_number_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择联系人"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@android:drawable/presence_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@android:drawable/presence_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@android:drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@android:drawable/presence_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            style="@style/myprebut"
            android:onClick="prePage"/>
        <Button
            style="@style/mynextbut"
            android:onClick="nextPage"
            />
    </RelativeLayout>

</LinearLayout>