<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      style="@style/mytitle"
        android:text="手机防盗"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="安全号码"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_safe_number"
            android:text="0000"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@+id/tv_safe_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="防盗保护是否开启"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_lock"
            android:src="@drawable/lock"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_below="@+id/iv_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_divider"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_rest_setup"
            android:textSize="25dp"
            android:textColor="#000"
            android:background="@drawable/select_mobile_safe_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新设置向导"
            />
    <TextView
        android:textSize="25dp"
        android:textColor="#000"
        android:background="#a9a6a6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="报警音乐"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据销毁"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="远程锁屏"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS追踪"
        />
</LinearLayout>