<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kcy.tooglebutton.MainActivity">

    <com.kcy.tooglebutton.view.ToggleView
        xmlns:toggletool="http://schemas.android.com/apk/res/com.kcy.tooglebutton"
        android:layout_centerInParent="true"
        android:id="@+id/toggleview"
        toggletool:switch_background="@drawable/switch_background"
        toggletool:slide_button="@drawable/slide_button"
        toggletool:switch_state="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
